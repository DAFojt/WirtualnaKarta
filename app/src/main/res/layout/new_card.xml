<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <GridLayout
            android:layout_width="326dp"
            android:layout_height="220dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Wykryto nową kartę"
                android:id="@+id/textView4"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Numer karty:"
                android:id="@+id/textView6"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="DEV_CARD_NUMBER"
                android:id="@+id/textView5"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Podaj imię właściciela:"
                android:id="@+id/textView7"
                android:layout_row="6"
                android:layout_column="0" />

            <EditText
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_row="7"
                android:layout_column="0" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_gravity="center_horizontal|bottom">

            <Button
                android:layout_width="411dp"
                android:layout_height="match_parent"
                android:text="Dodaj kartę"
                android:id="@+id/button"
                android:layout_row="5"
                android:layout_column="15"
                android:textSize="40dp"
                android:gravity="center" />
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="129dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tworzenie nowej \nwirtualnej karty płatniczej"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal|top"
            android:textSize="34dp"
            android:gravity="center" />
    </FrameLayout>
</LinearLayout>